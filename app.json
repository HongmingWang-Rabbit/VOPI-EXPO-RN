{
  "expo": {
    "name": "VOPI",
    "slug": "vopi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "vopi",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.24rabbit.vopi",
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "com.googleusercontent.apps.613369473822-pi7ut8sau3oh8i942gi2chbnkf9s069r"
            ]
          }
        ],
        "NSCameraUsageDescription": "VOPI needs camera access to record product videos",
        "NSMicrophoneUsageDescription": "VOPI needs microphone access for voice descriptions",
        "NSPhotoLibraryUsageDescription": "VOPI needs photo library access to select videos for processing"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.rabbit24.vopi",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_VIDEO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow VOPI to access your camera for recording product videos",
          "microphonePermission": "Allow VOPI to access your microphone for voice descriptions",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow VOPI to access your photos for video selection"
        }
      ],
      "expo-secure-store",
      "expo-web-browser",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "2d21e5b5-8670-47bc-860d-f69748b21922"
      },
      "apiUrl": "https://api.vopi.24rabbit.com",
      "webUrl": "https://vopi.24rabbit.com",
      "googleIOSClientId": "613369473822-pi7ut8sau3oh8i942gi2chbnkf9s069r.apps.googleusercontent.com",
      "googleIOSReversedClientId": "com.googleusercontent.apps.613369473822-pi7ut8sau3oh8i942gi2chbnkf9s069r"
    },
    "owner": "hongmingwang"
  }
}
